<Window x:Name="confirmationWindow" x:Class="OOP_Dankov.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_Dankov"
        mc:Ignorable="d"
        Title="ConfirmationWindow" Height="150" Width="300" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF9E41D6"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="YesButton" Content="Да" HorizontalAlignment="Left" Margin="46,70,0,0" VerticalAlignment="Top" Height="34" Width="76" Click="YesButton_Click"/>
        <Button x:Name="NoButton" Content="Нет" HorizontalAlignment="Left" Margin="177,69,0,0" VerticalAlignment="Top" Height="35" Width="76" IsCancel="True"/>
        <Label x:Name="ConfirmLabel" Content="Вы уверены, что хотите удалить базу данных?" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" Height="50"/>

    </Grid>
</Window>
